<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar, bisa disesuaikan -->
    <solid android:color="@color/gray_light" />

    <!-- Sudut membulat -->
    <corners android:radius="12dp" />

    <!-- Padding opsional -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

    <!-- Border halus -->
    <stroke
        android:width="1dp"
        android:color="@color/gray_inactive" />
</shape>
