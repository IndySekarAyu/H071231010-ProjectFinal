<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gunakan warna dari colors.xml -->
    <solid android:color="@color/gray_light" />

    <corners android:radius="12dp" />

    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

    <!-- Pakai warna abu-abu tidak aktif sebagai stroke -->
    <stroke
        android:width="1dp"
        android:color="@color/gray_inactive" />
</shape>
